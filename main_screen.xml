<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/historie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dip"
        android:text="Historie" />
    <Button
        android:id="@+id/jizda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/historie"
        android:layout_alignTop="@id/historie"
        android:text="Jízda" />
    <RadioGroup
        android:id="@+id/volba_jizdy"
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:layout_below="@id/historie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RadioButton
            android:id="@+id/sluzebni_jizda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Služební jízda" />
        <RadioButton
            android:id="@+id/soukroma_jizda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soukromá jízda" />
    </RadioGroup>
    <Button
        android:id="@+id/zahajit_jizdu"
        android:layout_below="@id/volba_jizdy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zahájit jízdu" />
</RelativeLayout>